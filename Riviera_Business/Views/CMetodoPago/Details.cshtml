@model Riviera_Business.Models.CMetodoPago

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>CMetodoPago</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 bg-dark">
            Nombre:
        </dt>
        <dt class = "col-sm-9 bg-white">
            @Html.DisplayFor(model => model.Nombre)
        </dt>
        <dt class = "col-sm-2 bg-dark">
            Usuario:
        </dt>
        <dt class = "col-sm-9 bg-white">
            @Html.DisplayFor(model => model.Usuario)
        </dt>
        <dt class = "col-sm-2 bg-dark">
            Estado:
        </dt>
        <dt class = "col-sm-9 bg-white">
            @Html.DisplayFor(model => model.IdEstadoNavigation.IdEstados)
        </dt>
    </dl>
</div>
<div class="text-right">
    <a class="btn btn-info mr-2" asp-action="Index">Regresar</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.IdMetodoPago">Editar</a>

</div>
