@model Riviera_Business.Models.CMarcaCarro

@{
    ViewData["Title"] = "Create";
}


<h4 class="text-center"><strong>Agregar</strong> Nueva Marca</h4>
<hr />
<div class="row">
    <p>En caso de que no exista agergar una nueva marca</p>
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreMarca" class="control-label">Nombre de Marca a agregar</label>
                <input asp-for="NombreMarca" class="form-control" />
                <span asp-validation-for="NombreMarca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align:right;">
                <a class="btn btn-info" asp-action="Index">Lista de Marcas</a>
                <input type="submit" value="Agregar" class="btn btn-primary" style="margin-left:1%;" />
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
