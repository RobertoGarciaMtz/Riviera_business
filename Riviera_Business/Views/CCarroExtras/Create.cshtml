    function obtenerMMV(select) {
        var idSelected = select.value;
        $.ajax({
            url: "/CCarroExtras/RecuperarVersion",
            method: "POST",
            data: { "id": idSelected },
            success: function (z) {
                let selectVersion = document.getElementById("regresaversion");
                let html = "";
                html += "<option value ='" + z.idVersionCarro + "' >" + z.versionCarro + "</option>";
                selectVersion.innerHTML = html;
            } 
        });
    }


