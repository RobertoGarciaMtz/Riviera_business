@model Riviera_Business.Models.CCarroExtra

@{
    ViewData["Title"] = "Create";
}

<h1>Verificacion Aditamentos</h1>

<h4>Extras del Automovil</h4>
<hr />
<p>En este apartado se llenaran los aditamentos con los que llego el automovil
    habiendo sido comprado</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manuales" class="control-label">Entrego Manuales</label>
                <select asp-for="Manuales" class="form-control">
                    <option value="1">Entrego</option>
                    <option value="2">No Entrego</option>
                    <option value="3">En Espera</option>
                </select>
                <span asp-validation-for="Manuales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarnetServicio" class="control-label">Entrego Carnet de Servicio</label>
                <select asp-for="CarnetServicio" class="form-control">
                    <option value="1">Entregado</option>
                    <option value="2">No Entregado</option>
                    <option value="3">En Espera</option>
                </select>
                <span asp-validation-for="CarnetServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duplicado" class="control-label">Entrego Duplicado de llaves</label>
                <select asp-for="Duplicado" class="form-control">
                    <option value="1">Entregado</option>
                    <option value="2">No Entregado</option>
                    <option value="3">En Espera</option>
                </select>
                <span asp-validation-for="Duplicado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LlantaRefaccion" class="control-label">Traia llanta de refaccion</label>
                <select asp-for="LlantaRefaccion" class="form-control">
                    <option value="1">Entregado</option>
                    <option value="2">No Entregado</option>
                    <option value="3">En Espera</option>
                </select>
                <span asp-validation-for="LlantaRefaccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Herramientas" class="control-label">Traia herramientas</label>
                <select asp-for="Herramientas" class="form-control">
                    <option value="1">Entregado</option>
                    <option value="2">No Entregado</option>
                    <option value="3">En Espera</option>
                </select>
                <span asp-validation-for="Herramientas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gato" class="control-label">Traia gato</label>
                <select asp-for="Gato" class="form-control">
                    <option value="1">Entregado</option>
                    <option value="2">No Entregado</option>
                    <option value="3">En Espera</option>
                </select>
                <span asp-validation-for="Gato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Antena" class="control-label">Venia con antena</label>
                <select asp-for="Antena" class="form-control">
                    <option value="1">Entregado</option>
                    <option value="2">No Entregado</option>
                    <option value="3">En Espera</option>
                </select>
                <span asp-validation-for="Antena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstado" class="control-label"></label>
                <select asp-for="IdEstado" class="form-control" asp-items="ViewBag.Estados"></select>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Seleccionar el automovil al que pertenece este registro</label>
                <select asp-for="IdCarro" class="form-control selectdos"  asp-items="ViewBag.Caracarro"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Terminar Llenado" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Lista de chequeo autos</a>
            </div>
        </form>
    </div>
</div>



