@model Riviera_Business.Models.CVersionCarro

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Versión</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVersionCarro" />
            <div class="form-group">
                <label asp-for="VersionCarro" class="control-label"></label>
                <input asp-for="VersionCarro" class="form-control" />
                <span asp-validation-for="VersionCarro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdModelo" class="control-label"></label>
                <select asp-for="IdModelo" class="form-control" asp-items="ViewBag.Modelo"></select>
                <span asp-validation-for="IdModelo" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <input type="submit" value="Save" class="mr-2 btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Regresar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
