@model Riviera_Business.Models.CMedioPublicitario

@{
    ViewData["Title"] = "Create";
}

<h1><strong>Agregar </strong>Medio Publicitario</h1>
<hr />
<div class="row">
    <p>Agregrar medio publicitario</p>
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Escribir Nuevo Medio que agregar</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstado" class="control-label"></label>
                <select asp-for="IdEstado" class="form-control" asp-items="ViewBag.Estados"></select>
            </div>
            <div class="form-group text-right">
                <a class="btn btn-info mr-2" asp-action="Index">Lista de Medios</a>
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
