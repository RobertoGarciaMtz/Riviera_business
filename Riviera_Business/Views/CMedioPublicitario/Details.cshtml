@model Riviera_Business.Models.CMedioPublicitario

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de medio publicitario</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-3 bg-dark">
            Medio publicitario:
        </dt>
        <dt class = "col-sm-9 bg-white">
            @Html.DisplayFor(model => model.Nombre)
        </dt>
        <dt class = "col-sm-3 bg-dark">
            Estado:
        </dt>
        <dt class = "col-sm-9 bg-white">
            @Html.DisplayFor(model => model.IdEstadoNavigation.Descripcion)
        </dt>
    </dl>
</div>
<div class="text-right">
    <a class="btn btn-info" asp-action="Index">Regresar</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.IdMedioPublicitario">Editar</a>
</div>
