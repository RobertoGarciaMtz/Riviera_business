@model Riviera_Business.Models.TbConta

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar</h1>

<h4> Apartado Conta</h4>
<hr />
<p>Apartado encargado de contaduria</p>
<p style="font-size:xx-small"> Lo pidio jhonatan</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdBanco" class="control-label">Selecciona Banco</label>
                <select asp-for="IdBanco" class ="form-control" asp-items="ViewBag.Bancos"></select>
            </div>
            <div class="form-group">
                <label asp-for="CargoAbono" class="control-label">Selecciona Cargo o Abono</label>
                <select asp-for="CargoAbono" class="form-control">
                    <option value="1">Cargo</option>
                    <option value="2">Abono</option>
                </select>
                <span asp-validation-for="CargoAbono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaTramite" class="control-label"></label>
                <input asp-for="FechaTramite" class="form-control" />
                <span asp-validation-for="FechaTramite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lista de conta</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
