@model IEnumerable<Riviera_Business.Models.CEstados>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Lista de Estados</h1>
<a class="btn btn-success" asp-action="Create">Agregar Nuevo</a>
<p>En este apartado estan los estados que pueden tener tanto un Automovil como un proceso</p>
<table id="dataTable" style="width:100%;">
    <thead  class="bg-secondary">
        <tr>
            <th>
                Estado
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEstados" class="btn btn-sm btn-success">Editar</a>
                <a asp-action="Details" asp-route-id="@item.IdEstados" class="btn btn-sm btn-info">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
