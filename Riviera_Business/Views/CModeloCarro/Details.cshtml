@model Riviera_Business.Models.CModeloCarro

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Detalles del modelo</h1>
<hr />
<div>
    
    <dl class="row">
        <dt class="col-sm-3 bg-dark">
            Marca: 
        </dt>
        <dt class="col-sm-9 bg-white">
            @Html.DisplayFor(model => model.IdMarcaNavigation.NombreMarca)
        </dt>
        <dt class="col-sm-3 bg-dark">
            Modelo:
        </dt>
        <dt class="col-sm-9 bg-white">
            @Html.DisplayFor(model => model.ModeloCarro)
        </dt>
        <dt class="col-sm-3 bg-dark">
            Agregado por:
        </dt>
        <dt class="col-sm-9 bg-white">
            @Html.DisplayFor(model => model.Usuario)
        </dt>
    </dl>
</div>
<div class="text-right">
    <a class="btn btn-sm btn-info mr-3" asp-action="Index">Regresar</a>
    <a class="btn btn-sm btn-primary mr-4" asp-action="Edit" asp-route-id="@Model.IdModeloCarro">Editar</a> 
</div>
