@model Riviera_Business.Models.CModeloCarro

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar modelo del carro</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdModeloCarro" />
            <div class="form-group">
                <label asp-for="ModeloCarro" class="control-label"></label>
                <input asp-for="ModeloCarro" class="form-control" />
                <span asp-validation-for="ModeloCarro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMarca" class="control-label"></label>
                <select asp-for="IdMarca" class="form-control" asp-items="ViewBag.Marcas"></select>
                <span asp-validation-for="IdMarca" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <input type="submit" value="Guardar" class="mr-2 btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Regresar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
