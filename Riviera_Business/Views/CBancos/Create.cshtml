@model Riviera_Business.Models.CBanco

@{
    ViewData["Title"] = "Create";
}

<h3 class="text-center"><strong>Agregar</strong> Banco</h3>

<hr />
<div class="row">
    <p>Para agregar un banco en caso de que no este almacenado</p>
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Escribir nombre de banco no registrado</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <a asp-action="Index" class="btn btn-info mr-2">Ver Bancos</a>
                <input type="submit" value="Agregar Banco" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
